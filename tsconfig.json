{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "sourceMap": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/pages/*": ["pages/*"],
      "@/utils/*": ["src/lib/utils/*"],
      "@/db/*": ["src/lib/db/*"],
      "@/middlware/*": ["src/middleware/*"],
      "@/data/*": ["src/data/*"],
      "@/themes/*": ["src/themes/*"],
      "@/styles/*": ["styles/*"],
      "@/lib/*": ["src/lib/*"],
      "@/public/*": ["public/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.json", "src"],
  "exclude": ["node_modules"]
}
